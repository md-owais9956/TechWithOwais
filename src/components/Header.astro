---
const navLinks = [
  { href: "/blog", label: "Blog" },
  { href: "/learning-paths", label: "Learning Paths" },
  { href: "/about", label: "About" },
  { href: "https://github.com/md-owais9956", label: "GitHub", external: true },
  { href: "https://x.com/MohammadOw64104", label: "Twitter(X)", external: true },
  { href: "https://www.linkedin.com/in/mohammad-owais-45a1a0324/", label: "LinkedIn", external: true },
];
---

<header>
  <nav class="nav">
    <a href="/" class="logo">Tech With Owais</a>

    <!-- Desktop links -->
    <div class="nav-links">
      {navLinks.map(link => (
        <a
          href={link.href}
          target={link.external ? "_blank" : undefined}
          rel={link.external ? "noopener" : undefined}
        >
          {link.label}
        </a>
      ))}
    </div>

    <!-- Hamburger -->
    <button class="hamburger" aria-label="Toggle menu">
      â˜°
    </button>
  </nav>

  <!-- Mobile menu -->
  <div class="mobile-menu">
    {navLinks.map(link => (
      <a
        href={link.href}
        target={link.external ? "_blank" : undefined}
        rel={link.external ? "noopener" : undefined}
      >
        {link.label}
      </a>
    ))}
  </div>
</header>


<script>
  const button = document.querySelector(".hamburger");
  const menu = document.querySelector(".mobile-menu");

  function closeMenu() {
    menu?.classList.remove("open");
  }

  // Toggle menu on hamburger click
  button?.addEventListener("click", (e) => {
    e.stopPropagation();
    menu?.classList.toggle("open");
  });

  // Close when clicking anywhere outside
  document.addEventListener("click", (e) => {
    if (!(e.target instanceof Node)) return;
    if (!menu?.contains(e.target)) {
      closeMenu();
    }
  });

  // Close when clicking a link inside the menu
  menu?.querySelectorAll("a").forEach((link) => {
    link.addEventListener("click", closeMenu);
  });
</script>
